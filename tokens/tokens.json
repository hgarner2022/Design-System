{
  "$schema": "https://design-tokens.github.io/v1",

  "light": {
    "color": {
      "primary": {
        "50":  { "$type": "color", "$value": "#E1E0FB" },
        "100": { "$type": "color", "$value": "#D0CEF8" },
        "200": { "$type": "color", "$value": "#B7B3F4" },
        "300": { "$type": "color", "$value": "#908BEF" },
        "400": { "$type": "color", "$value": "#6A62E9" },
        "500": { "$type": "color", "$value": "#4F46E5" },
        "600": { "$type": "color", "$value": "#2F24E0" },
        "700": { "$type": "color", "$value": "#241ABC" },
        "800": { "$type": "color", "$value": "#1C1594" },
        "900": { "$type": "color", "$value": "#140F6B" }
      },
      "neutral": {
        "0":   { "$type": "color", "$value": "#FFFFFF" },
        "50":  { "$type": "color", "$value": "#F8F9FA" },
        "100": { "$type": "color", "$value": "#F1F3F5" },
        "200": { "$type": "color", "$value": "#E9ECEF" },
        "300": { "$type": "color", "$value": "#DEE2E6" },
        "400": { "$type": "color", "$value": "#CED4DA" },
        "500": { "$type": "color", "$value": "#ADB5BD" },
        "600": { "$type": "color", "$value": "#868E96" },
        "700": { "$type": "color", "$value": "#495057" },
        "800": { "$type": "color", "$value": "#343A40" },
        "900": { "$type": "color", "$value": "#212529" }
      },
      "brand":                { "$type": "color", "$value": "{color.primary.500}" },
      "brand-hover":          { "$type": "color", "$value": "{color.primary.600}" },
      "surface":              { "$type": "color", "$value": "{color.neutral.0}"   },
      "surface-inverse":      { "$type": "color", "$value": "{color.neutral.900}" },
      "on-surface":           { "$type": "color", "$value": "{color.neutral.900}" },
      "on-surface-inverse":   { "$type": "color", "$value": "{color.neutral.0}"   }
    },
    "font": {
      "family": {
        "body":    { "$type": "fontFamily", "$value": "\"Plus Jakarta Sans\", sans-serif" },
        "heading": { "$type": "fontFamily", "$value": "\"Petrona\", serif" }
      },
      "size": {
        "xs": { "$type": "dimension", "$value": "12" },
        "sm": { "$type": "dimension", "$value": "14" },
        "md": { "$type": "dimension", "$value": "16" },
        "lg": { "$type": "dimension", "$value": "20" },
        "xl": { "$type": "dimension", "$value": "24" }
      },
      "weight": {
        "regular": { "$type": "fontWeight", "$value": "400" },
        "medium":  { "$type": "fontWeight", "$value": "500" },
        "bold":    { "$type": "fontWeight", "$value": "700" }
      }
    },
    "radius": {
      "sm": { "$type": "dimension", "$value": "4" },
      "md": { "$type": "dimension", "$value": "8" },
      "lg": { "$type": "dimension", "$value": "12" }
    },
    "space": {
      "0": { "$type": "dimension", "$value": "0"  },
      "1": { "$type": "dimension", "$value": "4"  },
      "2": { "$type": "dimension", "$value": "8"  },
      "3": { "$type": "dimension", "$value": "12" },
      "4": { "$type": "dimension", "$value": "16" },
      "5": { "$type": "dimension", "$value": "20" }
    }
  },
  "dark": {
    "color": {
      "brand":                { "$type": "color", "$value": "{color.primary.400}" },
      "brand-hover":          { "$type": "color", "$value": "{color.primary.300}" },
      "surface":              { "$type": "color", "$value": "{color.neutral.900}" },
      "surface-inverse":      { "$type": "color", "$value": "{color.neutral.0}"   },
      "on-surface":           { "$type": "color", "$value": "{color.neutral.0}"   },
      "on-surface-inverse":   { "$type": "color", "$value": "{color.neutral.900}" }
    }
  }
} 