{
  "framework": "Next.js/React",
  "builder": "Next.js",
  "language": "TypeScript",
  "styling": {
    "framework": "Tailwind CSS v4",
    "configPath": "./tailwind.config.js",
    "globalCSS": "./src/app/globals.css"
  },
  "tokens": {
    "source": "./tokens/tokens.json",
    "output": "./src/styles/theme.css"
  },
  "fonts": {
    "body": "Plus Jakarta Sans",
    "headings": "Petrona"
  },
  "rsc": true,
  "tsx": true,
  "components": [
    "Button",
    "Input",
    "Card",
    "Form",
    "Label",
    "Select",
    "Textarea",
    "Sonner",
    "Dialog",
    "Popover",
    "DropdownMenu",
    "Sheet",
    "Tabs",
    "Accordion",
    "HoverCard",
    "Progress",
    "RadioGroup",
    "Switch",
    "Checkbox",
    "Avatar",
    "Badge",
    "Skeleton",
    "Table",
    "Calendar",
    "Command",
    "Separator",
    "Slider",
    "Toggle",
    "Alert",
    "Carousel",
    "Drawer",
    "Menubar",
    "NavigationMenu",
    "Pagination",
    "ScrollArea",
    "Resizable"
  ]
}